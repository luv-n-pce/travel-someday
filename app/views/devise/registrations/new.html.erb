<header>
  <%= link_to image_tag("logo7.png", class:"travel-someday"), "/" %>
</header>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      sign up
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">nickname</label>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"nickname",  autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">email</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"email" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">password</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"password(6文字以上の半角英数字)" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">password confirmation</label>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"same password" %>
  </div>
  <div class='register-btn'>
    <%= f.submit "sign up" ,class:"register-blue-btn" %>
  </div>
</div>
<% end %>
